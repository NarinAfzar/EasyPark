<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition skin-red sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("SwipeInGate","Tracking")" class="logo">
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>EasyPark</b></span><span class="label label-warning"></span>
            </a>
            <!-- Sidebar toggle button-->
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <p class="title">&nbsp; Drivers &nbsp; <span class="label label-warning notification-number"></span></p>

            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu">
                    <li class="header">&nbsp; Drivers Menu  </li>                    
                    <li><a href="@Url.Action("SwipeInGate","Tracking")"> <i class="fa fa-toggle-on "></i> Swipe in gate &nbsp;</a></li>
                    <li><a href="@Url.Action("SwipeInParking","Tracking")"> <i class="fa fa-toggle-off "></i> Swipe in parking &nbsp;</a></li>
                    <li><a href="@Url.Action("SwipeInVan","Tracking")"> <i class="fa fa-truck "></i> Swipe in van &nbsp;</a></li>
                </ul>
            </section>
        </aside>

        <div class="body-content content-wrapper">
            <section class="content-header"></section>
            <section class="content">
                @RenderBody()
                <audio src="~/Content/Sounds/NotificationAlert.mp3" id="NotificationSound" preload="auto"></audio>
            </section>
        </div>

        <footer class="main-footer">
            <strong>&copy; @DateTime.Now.Year - Easy Park</strong>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>