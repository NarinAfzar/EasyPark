@model IEnumerable<EasyPark.WebUI.Areas.Manager.ViewModels.Driver.ItemViewModel>

@{
    ViewBag.Title = "Drivers list";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Drivers List</h3>
        <div class="box-tools pull-right">
            <!-- Buttons, labels, and many other things can be placed here! -->
            <!-- Here is a label for example -->
            <span class="fa fa-group"></span>
        </div><!-- /.box-tools -->
    </div><!-- /.box-header -->

    <div class="box-body">
        <section id="no-more-tables">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnfinishedTaskCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastTask)
                        </th>
                        <th class="negligible">
                            @Html.DisplayNameFor(model => model.LastTaskStartDate)
                        </th>
                        <th class="negligible">
                            @Html.DisplayNameFor(model => model.LastTaskEndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TransportService)
                        </th>
                        <th class="negligible">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td data-title="@Html.DisplayNameFor(model => model.Name)">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.UnfinishedTaskCount)">
                                @Html.DisplayFor(modelItem => item.UnfinishedTaskCount)
                            </td>
                            <td data-title=" @Html.DisplayNameFor(model => model.LastTask)">
                                @Html.DisplayFor(modelItem => item.LastTask)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.LastTaskStartDate)" class="negligible">
                                @Html.DisplayFor(modelItem => item.LastTaskStartDate)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.LastTaskEndDate)" class="negligible">
                                @Html.DisplayFor(modelItem => item.LastTaskEndDate)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.TransportService)">
                                @Html.DisplayFor(modelItem => item.TransportService)
                            </td>
                            <td data-title="@Html.DisplayNameFor(model => model.Status)" class="negligible">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </section>
    </div><!-- /.box-body -->
</div><!-- /.box -->


